<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="56dp">

    <EditText
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="10dp"
        android:id="@+id/search_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Email"
        android:inputType="text" />


    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_button_main"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Search"
        android:textColor="@color/white"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        tool:text="User name" />

    <Button
        android:id="@+id/friend_send_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_change"
        android:visibility="gone"
        android:minWidth="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:text="SEND FRIEND REQUEST"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/friend_decline_btn"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:visibility="gone"
        android:background="@drawable/background_button_reject"
        android:layout_marginBottom="20dp"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="@color/white"/>


</LinearLayout>

